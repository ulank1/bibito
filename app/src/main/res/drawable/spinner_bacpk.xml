<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#fff"/>
            <stroke android:color="#555"  android:width="1px"/>
        </shape>
    </item>

    <item android:gravity="center_vertical|right" android:right="8dp">
        <layer-list>
            <item android:width="8dp" android:height="8dp"  android:gravity="center" android:bottom="0dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#000000" />
                        <stroke android:color="#000000" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="20dp" android:height="10dp" android:bottom="21dp" android:gravity="center" android:top="8dp" >
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>