<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageView
                android:layout_gravity="right"
                android:id="@+id/clear"
                android:background="@drawable/ic_action_clear"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView

                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerInside"
                android:src="@drawable/placeholder_image" />


            <ImageView
                android:id="@+id/star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_action_star_none_active"
                android:visibility="gone" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/avatar"
                android:layout_toRightOf="@+id/avatar"
                android:text="dsfsdfsdfdsf"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>



        <TextView
            android:maxLines="3"
            android:textSize="11sp"
            android:visibility="visible"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_description"
            android:padding="15dp"
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jkfbkjhgjhdjfogjdhfgjhiudfhgjdfjkgldkfhhjlkadklfakdjfklajsdklfjklajdlkfjaklsjdfklajsdlkfjaksdjfklajsdfklajsdkfjasdlkfjksldfjklasjfklasdjfklajdfklajdklfajsdlkfjadlkfjaklfjakjdfklajdsflkajsdlkfaklfjlaks"
            android:textColor="#000" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_call"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="Подробнее"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@drawable/btn_back_violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>